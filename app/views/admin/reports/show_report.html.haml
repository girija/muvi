      Videos (YouTube)
    %td
      =@youtube.total
    %td
      =@youtube_this_month.total
    %td
      =@youtube_last_month.total
    %td
      =@youtube_last_2month.total



  %tr
    %td
      Videos (CPs)
    %td
      =@cps.total
    %td
      =@cps_this_month.total
    %td
      =@cps_last_month.total
    %td
      =@cps_last_2month.total

  %tr
