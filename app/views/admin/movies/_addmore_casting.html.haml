%div{:id => "actor_crew", :style=>"border:2px solid #BBBBBB; margin-bottom:30px;background-color:#F0F0F0; padding:2px;font-size:12px; float:left; width:100%; box-shadow:10px 10px 5px #888888;"}
  .clear
  %form{:action => "/save_casting_from_page", :method => "post", "data-remote" => "true"}
    %div.col_one{:style => "width:25%"}
      %label{:style => "width:70px"}  Cast/Crew
      %input{:type => "hidden",:style => "width:100px", :name => "cast_id"}

      %input{:type=>"text",:name=>"castname",:id=>"name",:class=>"moviecastName ui-autocomplete-input", :autocomplete=>"off", :role=>"textbox", "aria-autocomplete"=>"list", "aria-haspopup"=>"true", :style => "width:150px"}


    %div.col_one{:style => "width:25%"}
      %label{:style => "width:70px"} Type
      = select_tag 'cast_type', options_for_select(option_for_cast_type, ["actor"]), { :multiple => true,:style => "width:160px; height:100px; font-size:14px", :size => "3"}


    %div.col_one{:style => "width:20%"}
      %label{:style => "width:70px"} Character
      %input{:type => "text",:style => "width:100px", :name => "characters"}

    %input{:type => "hidden", :name => "movie_id", :value => "#{params[:movie_id]}"}


    %span.delete
      &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
      %input{:type => "submit", :value => "Add", :style => "background: none repeat scroll 0px 0px #0083CF; border:1px solid #0083CF; padding: 6px 15px; color:#FFFFFF; font-weight:bold; margin-top:20px; float:left; margin-right:30px;"}
      &nbsp; &nbsp; &nbsp; &nbsp;
      %a{:onclick => "javascript:hide_add_casting();", :style => "padding:5px 15px; background-color:#0083CF; color:#FFFFFF; border:1px solid #0083CF; font-weight:bold; margin-top:20px; float:left;"}Cancel


