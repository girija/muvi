-for i in 0..3
  %input{:type => "text", :id => "hot_today_item_#{i}", :name => "hot_today_item[]",:placeholder => 'Enter the name of movie', :style => "margin-right:5px"}
  = hidden_field_tag "id_hot_today_item_#{i}" , 0, :name => 'hot_today_id[]'
%input{:type => "radio", :name => "start", :value => "hot_today", :style => "width:auto", :id => "hot_today_radio"}
