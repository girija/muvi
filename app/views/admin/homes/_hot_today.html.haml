-unless @hot_today.blank?
  -t = 0
  -@hot_today.each do |tb|
    -movie = Movie.find_by_id(tb.subject_id)
    %script
      $("#hot_today_item_#{t}").val("#{movie.name}");
      $("#id_hot_today_item_#{t}").val("#{tb.subject_id}");
      if("#{tb.start}" == "true"){
      $("#hot_today_radio").attr("checked","checked");
      }
    -t = t + 1

