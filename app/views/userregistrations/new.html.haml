-if @notconfirmed
  :javascript
    if(window.opener){
      //$('#message', window.opener.document).html('You have to confirm your account before continuing. Please check your mail. ');
      window.close();
    }
-elsif current_user
  :javascript
    if(window.opener){
      window.close();
      parent.window.opener.location.reload(true)
    }
    else
    {
        location.href = "/users/edit";
    }
-else
  :javascript
    if(window.opener){
      $('#user_user_profile_attributes_display_name', window.opener.document).val('#{@user_data[:name]}');
      //$('#user_email', window.opener.document).val('#{@user_data[:email]}');
      $('#fb_user_email', window.opener.document).val('#{@user_data[:email]}');
      $('#user_user_tokens_attributes_0_provider', window.opener.document).val('#{@user_data[:provider]}');
      $('#user_user_tokens_attributes_0_uid', window.opener.document).val('#{@user_data[:uid]}');
      $('#user_user_tokens_attributes_0_token', window.opener.document).val('#{@user_data[:token]}');
      $('#user_user_tokens_attributes_0_secret', window.opener.document).val('#{@user_data[:secret]}');
      window.close()
    }

