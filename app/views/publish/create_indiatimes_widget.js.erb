    html += "  <div style='background-color: #D8D8D8; border: 1px solid #BECBD4;border-radius: 6px; height: 15px; padding: 2px 3px 4px; width: 90px;float:left;margin-right:3px'>";
    html += "    <div style='width:<%=movie_list["meter"].to_i %>%; background:url(\"http://www.muvi.com/images/R-RatingBar.jpg\") repeat-x scroll 0 0 transparent; border-radius:6px; height:17px;'>&nbsp;</div>";
    html += "  </div>";
  }

  html += "    <div style='float:left;'><%=movie_list["meter"]%>%</div>";
  html += " </DIV>";
  html += "  <div style='clear:both;height:5px'></div>";
 
<% end %>

