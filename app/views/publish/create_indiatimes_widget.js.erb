      html += "    <div style='width:<%=movie_list["meter"].to_i %>%; background:url(\"http://www.muvi.com/images/G-RatingBar.jpg\") repeat-x scroll 0 0 transparent; border-radius:6px; height:17px;'>&nbsp;</div>";
      html += "  </div>";
  }
