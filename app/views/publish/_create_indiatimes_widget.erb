
<div>
    <div style='text-align:center;border-bottom:1px solid #E0E0E0;padding-top:20px; font-size:20px; font-family:sans-serif;color:#959595; font-weight:normal'>Muvimeter</div>
  <div class='content'>
    <div style='font-family:lucida grande, tahoma, verdana, arial, sans-serif;font-size: 12px;background-color:#FFFFFF; padding:12px 4px 4px 0px'>

<% @movie_list.each do |movie_list| %>
  <% @host = movie_list["host"] %>
    <DIV style='float:left'>
      <div style='float:left;width:45px;'><a href='<%=movie_list["host"]%>/movies/<%= movie_list["link"]%>'><img style='border:0px; height:35px; height:35px;' src="<%=movie_list['host']%><%=movie_list['image']%>"/></a>&nbsp;</div>

      <div style='float:left;width:100px;margin-right:4px;margin-margintop:-4px;'><a href='<%=movie_list["host"]%>/movies/<%= movie_list["link"] %>' style='text-decoration:none'><%= movie_list["name"] %></a></div>

  <% if movie_list["meter"].to_i >= 60 %>
        <div style='background-color: #D8D8D8; border: 1px solid #BECBD4;border-radius: 6px; height: 15px; padding: 2px 3px 4px; width: 90px;float:left;margin-right:2px'>

          <div style='width:<%=movie_list["meter"].to_i %>%; background:url(\"http://www.muvi.com/images/G-RatingBar.jpg\") repeat-x scroll 0 0 transparent; border-radius:6px; height:17px;'>&nbsp;</div>
        </div>
  
  <% elsif movie_list["meter"].to_i < 60 %>
      <div style='background-color: #D8D8D8; border: 1px solid #BECBD4;border-radius: 6px; height: 15px; padding: 2px 3px 4px; width: 90px;float:left;margin-right:3px'>
        <div style='width:<%=movie_list["meter"].to_i %>%; background:url(\"http://www.muvi.com/images/R-RatingBar.jpg\") repeat-x scroll 0 0 transparent; border-radius:6px; height:17px;'>&nbsp;</div>
      </div>
  <% end %>

      <div style='float:left;'><%=movie_list["meter"]%>%</div>
   </DIV>
    <div style='clear:both;height:5px'></div>

<% end %>

    <div style='color:gray;font-size:11px;'>Muvimeter is based on critics and twitter rating <div style='float:right;margin-top:-5px;'><a href='http://www.muvi.com'><img src='<%=@host%>/images/logo_small.png' border='0'></a></div><div style='clear:both;height:4px'></div>

  </div>
 </div>
</div>


