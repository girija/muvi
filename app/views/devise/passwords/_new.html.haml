#login
  .login
    .heading
      .heading_label{:style=>"display: none;"}
    #message
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :remote => true, :method => :post }) do |f|
      = devise_error_messages!
      #errors
      %fieldset.registration
        .field
          = f.label :email, "Email"
          = f.email_field :email
        .clear
        %hr
        .clear
        .links2.left{:style=>"line-height: 33px;"}
          /= link_to "Login", new_session_path(resource_name)  , :remote => true, :style=>"text-shadow: none; font-size: 11px; color: #5d92ab; font-weight: normal;"
          %a{:onclick => "check_login();", :style=>"text-shadow: none; font-size: 11px; color: #5d92ab; font-weight: normal;cursor:pointer"}
            Login

          /= link_to "Join with Facebook", new_registration_path(resource_name) , :remote => true, :style=>"padding-left: 15px; text-shadow: none; font-size: 11px; color: #5d92ab; font-weight: normal;", :onclick => "open_window();"
          %a{:onclick => "check_reg();", :style=>"padding-left: 15px; text-shadow: none; font-size: 11px; color: #5d92ab; font-weight: normal; cursor:pointer"}
            Join with Facebook
        .reset-password-button.right
          = image_submit_tag('password_resetBtn.png')
    -#.links
      -#= render :partial => "devise/shared/links"

:javascript
  $(document).ready(function($) {
    $('#user_new').submit(function(){
        var chk2 = jQuery.trim($('#user_email').val());
        if(chk2 == ""){
            $('#login > .login > .heading > div.heading_label').html("Email can't be blank").fadeIn('slow');
            return false;
        }else{
            return true;
        }        
    });
  });

