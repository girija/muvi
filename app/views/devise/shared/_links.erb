<%- if controller_name != 'sessions' %>
  <%#= link_to "Login", new_session_path(resource_name)  , :remote => true %>
  <a onclick="check_login();" style="text-shadow: none; font-size: 11px; color: #5d92ab; font-weight: normal;cursor:pointer">Login</a>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%#= link_to "Register", new_registration_path(resource_name) , :remote => true %>
  <a onclick="check_reg();" style="text-shadow: none; font-size: 11px; color: #5d92ab; font-weight: normal;cursor:pointer">Register</a>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Forgot password?", new_password_path(resource_name) , :remote => true %>
<% end -%>

